<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/song_list_item_size"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewSectionTitle"
        android:layout_width="@dimen/song_list_section_title_text_view_size"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/song_list_item_icon_margin_end"
        android:layout_marginStart="@dimen/song_list_item_icon_margin_end"
        android:layout_weight="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/imageViewSongLogo"
        android:layout_width="@dimen/song_list_item_icon_width"
        android:layout_height="@dimen/song_list_item_icon_height"
        android:layout_marginStart="@dimen/song_list_item_icon_margin_end"
        android:contentDescription="@string/song_logo"
        android:src="@drawable/ic_music_01" />

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/song_list_item_icon_margin_end"
        android:layout_marginStart="@dimen/song_list_item_icon_margin_end"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/song_list_item_text_size"
        tools:text="Title text." />

</LinearLayout>