<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LyricsListActivity">

    <include
        android:id="@+id/genericToolbar"
        layout="@layout/generic_toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/song_list_top_bottom_margin"
        android:layout_marginBottom="@dimen/song_list_top_bottom_margin"
        android:layout_marginEnd="@dimen/song_list_symmetric_margin"
        android:layout_marginStart="@dimen/song_list_symmetric_margin"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genericToolbar" />

</android.support.constraint.ConstraintLayout>